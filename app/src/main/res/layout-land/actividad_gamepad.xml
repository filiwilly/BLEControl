<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="23dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/pad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cpad" />

            <Button
                android:id="@+id/bmid1"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignEnd="@+id/bup2"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/bup"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/bmid2"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/bup4"
                android:layout_width="48dp"
                android:layout_height="65dp"
                android:layout_alignBottom="@id/pad"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/bup2"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/bmid3"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignBottom="@id/pad"
                android:layout_toLeftOf="@+id/bup4"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/bup2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/bup3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignRight="@id/pad"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/bmid4"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignBottom="@id/pad"
                android:layout_toRightOf="@id/bup4"
                android:background="@android:color/transparent" />

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_toStartOf="@+id/linearLayout2"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/start3" />

        <Button
            android:id="@+id/bup7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignTop="@+id/imageView4"
            android:onClick="stpressed"
            android:background="@android:color/transparent"></Button>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btns2" />

        <Button
            android:id="@+id/bup6"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/bup5"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_alignRight="@+id/imageView6"
            android:layout_marginStart="26dp"
            android:background="@android:color/transparent" />
    </RelativeLayout>

</RelativeLayout>